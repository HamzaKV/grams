{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "es2015",
        "strict": true,
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react-jsx",
        "declaration": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "noUnusedParameters": true
    },
    "include": ["./src/**/*", "./package.json", "index.ts"],
    "exclude": ["node_modules", "dist", "example", "tests"]
}
